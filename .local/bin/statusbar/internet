#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	2) notify-send "$(nordvpn status)" ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
ðŸ“¡: no wifi connection
ðŸ“¶: wifi connection with quality
âŽ: no ethernet
ðŸŒ: ethernet working
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vpnstatus=$(nordvpn status | grep Status) 
if [ "${vpnstatus##* }" == 'Connected' ]; then
	vpnicon='ïƒ '
else
	vpnicon=''
fi

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ï›§ " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï‡« ", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "%s%s%s\n" "$vpnicon" "$wifiicon" "$(sed "s/down/âŽ/;s/up/ðŸŒ/" /sys/class/net/e*/operstate 2>/dev/null)"
